{
  "$schema": "https://raw.githubusercontent.com/tauri-apps/tauri/tauri-v1.2.3/tooling/cli/schema.json",
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "devPath": "http://localhost:3000"
  },
  "package": {
    "productName": "PackSquash",
    "version": "../package.json"
  },
  "tauri": {
    "allowlist": {
      "os": {
        "all": true
      },
      "shell": {
        "open": "^https://packsquash.page.link/.*|^/.+|^[A-Za-z]:.+|^\\.+",
        "execute": true,
        "scope": [
          {
            "name": "dbus-send",
            "cmd": "dbus-send",
            "args": [
              "--dest=org.freedesktop.FileManager1",
              "--type=method_call",
              "/org/freedesktop/FileManager1",
              "org.freedesktop.FileManager1.ShowItems",
              {
                "validator": "array:string:[^,]+"
              },
              {
                "validator": "string:.*"
              }
            ]
          },
          {
            "name": "explorer",
            "cmd": "explorer",
            "args": [
              {
                "validator": "/select,.*"
              }
            ]
          },
          {
            "name": "open",
            "cmd": "open",
            "args": [
              "-R",
              {
                "validator": ".*"
              }
            ]
          }
        ]
      },
      "fs": {
        "readFile": true
      },
      "clipboard": {
        "writeText": true
      },
      "window": {
        "setTitle": true,
        "requestUserAttention": true
      },
      "dialog": {
        "open": true,
        "save": true
      }
    },
    "bundle": {
      "active": true,
      "targets": [
        "updater",
        "msi",
        "dmg"
      ],
      "identifier": "com.github.comunidadaylas.packsquash.gui",
      "shortDescription": "The Minecraft: Java Edition resource and data pack optimizer",
      "publisher": "Comunidad Aylas",
      "category": "Utility",
      "copyright": "PackSquash developers",
      "icon": [
        "bundles/icons/256x256.png",
        "bundles/icons/icon.icns",
        "bundles/icons/icon.ico"
      ],
      "macOS": {
        "license": "../../../LICENSE"
      },
      "windows": {
        "allowDowngrades": true,
        "wix": {
          "license": "../../../LICENSE",
          "template": "bundles/wix/main.wxs",
          "bannerPath": "bundles/wix/img/banner.bmp",
          "dialogImagePath": "bundles/wix/img/dialogSidebar.bmp",
          "language": {
            "en-US": {
              "localePath": "bundles/wix/locales/en-US.wxl"
            },
            "zh-TW": {
              "localePath": "bundles/wix/locales/zh-TW.wxl"
            },
            "es-ES": {
              "localePath": "bundles/wix/locales/es-ES.wxl"
            }
          }
        },
        "webviewInstallMode": {
          "type": "embedBootstrapper"
        }
      }
    },
    "security": {
      "csp": "default-src 'self'; style-src 'self' 'unsafe-inline'; script-src 'self' 'unsafe-eval'"
    },
    "updater": {
      "active": true,
      "dialog": false,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDRDQTdFQkI4NDlCRjU2MEIKUldRTFZyOUp1T3VuVEkzemZrellYWFRxT1o5cjQ1OWt5dmMwc1dwMUdIL1pFODhwRjBRNmVjNDAK",
      "endpoints": [
        "https://cauldron.v1.packsquash.aylas.org/version-manifest.json"
      ],
      "windows": {
        "installMode": "passive"
      }
    },
    "windows": [
      {
        "title": "PackSquash",
        "label": "main",
        "width": 640,
        "height": 480,
        "minWidth": 240,
        "minHeight": 320,
        "resizable": true,
        "decorations": true
      }
    ]
  }
}
